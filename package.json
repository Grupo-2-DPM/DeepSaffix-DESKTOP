{
  "name": "deepsaffix-cliente",
  "version": "1.0.18",
  "description": "DeepSaffix Desktop Application",
  "repository": "https://github.com/Grupo-2-DPM/DeepSaffix-DESKTOP/",
  "author": "Gerbetwo <lassomoluna9@gmail.com>",
  "main": "compile-electron/main.js",
"scripts": {
    "compile": "tsc -p tsconfig.electron.json",
    "compile:watch": "tsc -p tsconfig.electron.json -w",
    "clean": "rimraf compile-electron dist",
    "start": "electron . --no-sandbox",
    "dev": "concurrently -k -n \"TS,ELC\" -c \"blue,green\" \"npm run compile:watch\" \"wait-on compile-electron/main.js && npm run start\"",

    "dist:linux": "npm run compile && electron-builder --linux",
    "dist:win": "npm run compile && electron-builder --win",
    "dist:mac": "npm run compile && electron-builder --mac",
    
    "build:all": "npm run compile && electron-builder -wlm"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^24.10.9",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.8.1",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}